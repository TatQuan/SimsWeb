@model SimsWeb.ViewModels.Assignments.AssignmentDetailVM

@{
    ViewData["Title"] = "Assignment Details";
}

<h2>@Model.Title</h2>
<p class="text-muted">
    Class: @Model.ClassName (@Model.CourseName) <br />
    Due at: @Model.DueAt.ToString("yyyy-MM-dd HH:mm")
</p>

@if (!string.IsNullOrWhiteSpace(Model.Description))
{
    <p>@Model.Description</p>
}

<hr />

<ul class="nav nav-tabs" id="assignmentTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="docs-tab" data-bs-toggle="tab"
                data-bs-target="#docs-tab-pane" type="button" role="tab">
            Documents
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="brief-tab" data-bs-toggle="tab"
                data-bs-target="#brief-tab-pane" type="button" role="tab">
            Assignment Brief
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="submissions-tab" data-bs-toggle="tab"
                data-bs-target="#submissions-tab-pane" type="button" role="tab">
            Submissions
        </button>
    </li>
</ul>

<div class="tab-content mt-3" id="assignmentTabsContent">
    <!-- Documents -->
    <div class="tab-pane fade show active" id="docs-tab-pane" role="tabpanel" aria-labelledby="docs-tab">
        <h4>Documents</h4>

        @if (Model.Documents == null || !Model.Documents.Any())
        {
            <p>No documents uploaded yet.</p>
        }
        else
        {
            <ul class="list-group mb-3">
                @foreach (var doc in Model.Documents)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>@doc.FileName</span>
                        <a class="btn btn-sm btn-outline-primary"
                           href="@Url.Content(doc.DownloadUrl)"
                           target="_blank">
                            Download
                        </a>
                    </li>
                }
            </ul>
        }

        <!-- Upload document -->
        <h5>Upload new document</h5>
        <form asp-action="Upload" asp-controller="FacultyAssignment"
              method="post" enctype="multipart/form-data" class="mt-2">
            <input type="hidden" name="AssignmentId" value="@Model.AssignmentId" />
            <input type="hidden" name="UploadType" value="document" />

            <div class="mb-3">
                <input type="file" name="File" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-success">Upload</button>
        </form>
    </div>

    <!-- Assignment Brief -->
    <div class="tab-pane fade" id="brief-tab-pane" role="tabpanel" aria-labelledby="brief-tab">
        <h4>Assignment Brief</h4>

        <div class="mb-3">
            <h5>Main brief</h5>
            @if (!string.IsNullOrWhiteSpace(Model.ExerciseDownloadUrl))
            {
                <a class="btn btn-outline-primary"
                   href="@Url.Content(Model.ExerciseDownloadUrl)"
                   target="_blank">
                    Download brief
                </a>
            }
            else
            {
                <p>No brief file uploaded.</p>
            }

            <form asp-action="Upload" asp-controller="FacultyAssignment"
                  method="post" enctype="multipart/form-data" class="mt-3">
                <input type="hidden" name="AssignmentId" value="@Model.AssignmentId" />
                <input type="hidden" name="UploadType" value="brief" />
                <div class="mb-2">
                    <label class="form-label">Upload / replace brief</label>
                    <input type="file" name="File" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-success">Save brief</button>
            </form>
        </div>

        <hr />

        <div class="mb-3">
            <h5>Guide file</h5>
            @if (!string.IsNullOrWhiteSpace(Model.GuideDownloadUrl))
            {
                <a class="btn btn-outline-secondary"
                   href="@Url.Content(Model.GuideDownloadUrl)"
                   target="_blank">
                    Download guide
                </a>
            }
            else
            {
                <p>No guide file uploaded.</p>
            }

            <form asp-action="Upload" asp-controller="FacultyAssignment"
                  method="post" enctype="multipart/form-data" class="mt-3">
                <input type="hidden" name="AssignmentId" value="@Model.AssignmentId" />
                <input type="hidden" name="UploadType" value="guide" />
                <div class="mb-2">
                    <label class="form-label">Upload / replace guide</label>
                    <input type="file" name="File" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-success">Save guide</button>
            </form>
        </div>
    </div>

    <!-- Submissions -->
    <div class="tab-pane fade" id="submissions-tab-pane" role="tabpanel" aria-labelledby="submissions-tab">
        <h4>Submissions</h4>

        @if (Model.AllSubmissions == null || !Model.AllSubmissions.Any())
        {
            <p>No submissions yet.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Student</th>
                            <th>File</th>
                            <th>Submitted at</th>
                            <th>Score</th>
                            <th>Comment</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sub in Model.AllSubmissions)
                        {
                            <tr>
                                <td>@sub.StudentName</td>
                                <td>
                                    <a href="@Url.Content(sub.DownloadUrl)" target="_blank">
                                        @sub.FileName
                                    </a>
                                </td>
                                <td>@sub.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@(sub.Score.HasValue? sub.Score.ToString() : "-")</td>
                                <td>@sub.TeacherComment</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

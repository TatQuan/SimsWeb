@using SimsWeb.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="auth-page d-flex align-items-center justify-content-center">
    <div class="auth-card">
        <div class="mb-4 text-center">
            <h3 class="mb-1">Create account</h3>
            <p class="text-muted mb-0 small">Fill in the information below</p>
        </div>

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <!-- Full name -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label small mb-1"></label>
                <input asp-for="Name" class="form-control auth-input" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label small mb-1"></label>
                <input asp-for="Email" class="form-control auth-input" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label small mb-1"></label>
                <input asp-for="Password" class="form-control auth-input" type="password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <!-- Confirm password -->
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label small mb-1"></label>
                <input asp-for="ConfirmPassword" class="form-control auth-input" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <!-- Submit -->
            <button type="submit" class="btn btn-orange w-100 py-2 mb-2">
                Register
            </button>

            <!-- Links -->
            <p class="text-center mt-2 mb-1 small">
                Already have an account?
                <a asp-controller="Account"
                   asp-action="Login"
                   class="auth-link text-decoration-none">
                    Login
                </a>
            </p>

            <p class="text-center small mb-0">
                <a asp-controller="Home"
                   asp-action="Index"
                   class="text-decoration-none auth-link-muted">
                    Back to home
                </a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

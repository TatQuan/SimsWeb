@using SimsWeb.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="auth-page d-flex align-items-center justify-content-center">
    <div class="auth-card">
        <div class="mb-4 text-center">
            <h3 class="mb-1">Sign in</h3>
            <p class="text-muted mb-0 small">Please enter your credentials</p>
        </div>

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label small mb-1"></label>
                <input asp-for="Email" class="form-control auth-input" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label small mb-1"></label>
                <input asp-for="Password" class="form-control auth-input" type="password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <!-- Remember + Forgot -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label small"></label>
                </div>
                <a asp-controller="Account"
                   asp-action="VerifyEmail"
                   class="small text-decoration-none auth-link">
                    Forgot password?
                </a>
            </div>

            <!-- Button -->
            <button type="submit" class="btn btn-orange w-100 py-2 mb-2">
                Login
            </button>

            <p class="text-center mt-2 mb-1 small">
                Don’t have an account?
                <a asp-controller="Account"
                   asp-action="Register"
                   class="auth-link text-decoration-none">
                    Register
                </a>
            </p>

            <p class="text-center small mb-0">
                <a asp-controller="Home"
                   asp-action="Index"
                   class="text-decoration-none auth-link-muted">
                    Back to home
                </a>
            </p>
        </form>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success small text-center">
        @TempData["SuccessMessage"]
    </div>
}


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@using SimsWeb.ViewModels
@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="auth-page d-flex align-items-center justify-content-center">
    <div class="auth-card">

        <div class="mb-4 text-center">
            <h3 class="mb-1">Change Password</h3>
            <p class="text-muted small mb-0">Update your password below</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success small text-center mb-3">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="ChangePassword" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <!-- New password -->
            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label small mb-1"></label>
                <input asp-for="NewPassword" class="form-control auth-input" />
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>

            <!-- Confirm -->
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label small mb-1"></label>
                <input asp-for="ConfirmPassword" class="form-control auth-input" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-orange w-100 py-2 mb-2">
                Save Password
            </button>

            <p class="text-center small mb-0">
                <a asp-controller="Home"
                   asp-action="Index"
                   class="text-decoration-none auth-link-muted">
                    Back to Home
                </a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

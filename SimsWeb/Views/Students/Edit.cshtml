@model SimsWeb.ViewModels.StudentEditViewModel

@{
    ViewData["Title"] = "Edit Student";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="mb-3">Edit Student</h4>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <form asp-action="Edit" asp-controller="Students" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

            <div class="mb-3">
                <label class="form-label">Student Code</label>
                <input class="form-control" value="@Model.DisplayStudentCode" disabled />
            </div>

            <div class="mb-3">
                <label asp-for="UserId" class="form-label"></label>
                <select asp-for="UserId" class="form-select"
                        asp-items="@(new SelectList(Model.StudentUsers, "Id", "Email", Model.UserId))">
                    <option value="">-- Select Student User --</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn sims-btn-orange">Save Changes</button>
            <a asp-controller="Students" asp-action="Index"
               class="btn btn-outline-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>

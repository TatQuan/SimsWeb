@model SimsWeb.ViewModels.FacultyEditViewModel

@{
    ViewData["Title"] = "Create Faculty";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="mb-3">Create Faculty</h4>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <form asp-action="Create" asp-controller="Faculty" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

            <div class="mb-3">
                <label asp-for="UserId" class="form-label"></label>
                <select asp-for="UserId" class="form-select"
                        asp-items="@(new SelectList(Model.FacultyUsers, "Id", "Email"))">
                    <option value="">-- Select Faculty User --</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Department" class="form-label"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn sims-btn-orange">Save</button>
            <a asp-controller="Faculty" asp-action="Index"
               class="btn btn-outline-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>

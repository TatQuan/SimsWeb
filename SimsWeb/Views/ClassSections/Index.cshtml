@model IEnumerable<SimsWeb.ViewModels.ClassSectionListItemViewModel>

@{
    ViewData["Title"] = "Manage Class Sections";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Manage Class Sections</h4>
    <div>
        <a asp-controller="ClassSections" asp-action="Deleted"
           class="btn btn-sm btn-outline-secondary me-2">
            Recycle Bin
        </a>
        <a asp-controller="ClassSections" asp-action="Create"
           class="btn btn-sm sims-btn-orange">
            + Add Class
        </a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-3">
        <div class="table-responsive">
            <table class="table table-sm align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Course</th>
                        <th>Teacher</th>
                        <th>Created</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted small py-3">
                                No class sections found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.Code</td>
                                <td>@item.Name</td>
                                <td>@item.CourseName</td>
                                <td>@item.TeacherName</td>
                                <td>@item.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="text-end">
                                    <a asp-controller="ClassSections" asp-action="Edit"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-primary me-1">
                                        Edit
                                    </a>

                                    <form asp-controller="ClassSections" asp-action="Delete"
                                          asp-route-id="@item.Id"
                                          method="post" style="display:inline;"
                                          onsubmit="return confirm('Soft delete this class?');">
                                        <button class="btn btn-sm btn-outline-danger">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

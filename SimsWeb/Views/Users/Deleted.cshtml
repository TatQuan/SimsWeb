@model IEnumerable<SimsWeb.ViewModels.UserListItemViewModel>

@{
    ViewData["Title"] = "Deleted Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Recycle Bin - Users</h4>
    <a asp-controller="Users" asp-action="Index"
       class="btn btn-sm btn-outline-secondary">
        Back to Users
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-3">
        <div class="table-responsive">
            <table class="table table-sm align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Username</th>
                        <th>Roles</th>
                        <th>Created</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted small py-3">
                                No deleted users.
                            </td>
                        </tr>
                    }
                    else
                    {
                        var i = 1;
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>@user.UserName</td>
                                <td>
                                    @if (user.Roles != null && user.Roles.Any())
                                    {
                                        foreach (var role in user.Roles)
                                        {
                                            <span class="badge bg-warning text-dark me-1 mb-1">@role</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted small">No role</span>
                                    }
                                </td>
                                <td>
                                    @user.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
                                </td>
                                <td class="text-end">
                                    <form asp-controller="Users" asp-action="Restore"
                                          asp-route-id="@user.Id"
                                          method="post" style="display:inline;">
                                        <button class="btn btn-sm btn-outline-success me-1">
                                            Restore
                                        </button>
                                    </form>

                                    <form asp-controller="Users" asp-action="HardDelete"
                                          asp-route-id="@user.Id"
                                          method="post" style="display:inline;"
                                          onsubmit="return confirm('Permanently delete this user? This cannot be undone.');">
                                        <button class="btn btn-sm btn-outline-danger">
                                            Delete Permanently
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@model SimsWeb.ViewModels.AdminCreateUserViewModel

@{
    ViewData["Title"] = "Create User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="mb-3">Create User</h4>

<div class="card shadow-sm border-0">
    <div class="card-body">

        <form asp-action="Create" asp-controller="Users" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Role</label>

                <select asp-for="SelectedRole" class="form-select">
                    <option value="Guest">Guest (default)</option>
                    @foreach (var role in Model.RoleList)
                    {
                        // tránh lặp Guest hai lần
                        if (role == "Guest") continue;

                        <option value="@role" selected="@(role == Model.SelectedRole)">
                            @role
                        </option>
                    }
                </select>

            </div>

            <button type="submit" class="btn sims-btn-orange">Create</button>

            <a asp-controller="Users" asp-action="Index"
               class="btn btn-outline-secondary ms-2">Cancel</a>
        </form>

    </div>
</div>

@using SimsWeb.ViewModels
@model IEnumerable<AssignmentListItemViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "My Assignments";
}

<h4 class="mb-3">My Assignments</h4>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You don't have any assignments yet.
    </div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="card-body p-3">
            <div class="table-responsive">
                <table class="table table-sm align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Assignment</th>
                            <th>Class</th>
                            <th>Course</th>
                            <th>Deadline</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in Model)
                        {
                            var isOverdue = !a.IsSubmitted && a.DueAt < DateTime.UtcNow;

                            <tr class="@(isOverdue ? "table-danger" : "")">
                                <td>@a.Title</td>
                                <td>@a.ClassCode @if (!string.IsNullOrWhiteSpace(a.ClassName)) {
                                <span>- @a.ClassName</span>
                            }
    </td>
                            <td>@a.CourseName</td>
                            <td>@a.DueAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                @if (a.IsSubmitted)
                                {
                                    if (a.Score.HasValue)
                                    {
                                        <span class="badge bg-success">Graded (@a.Score)</span>
                                    }
                                    else if (a.IsLate)
                                    {
                                        <span class="badge bg-warning text-dark">Submitted (Late)</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">Submitted</span>
                                    }
                                }
                                else
                                {
                                    if (isOverdue)
                                    {
                                        <span class="badge bg-danger">Overdue</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Not submitted</span>
                                    }
                                }
                            </td>
                            <td class="text-end">
                                <a asp-controller="Assignments"
                                   asp-action="Details"
                                   asp-route-id="@a.Id"
                                   class="btn btn-sm btn-outline-primary">
                                    View / Submit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
}

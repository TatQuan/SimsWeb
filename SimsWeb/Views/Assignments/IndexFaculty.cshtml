@using SimsWeb.ViewModels
@model IEnumerable<AssignmentListItemViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "My Assignments";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">My Assignments</h4>
    <a asp-controller="Assignments"
       asp-action="Create"
       class="btn sims-btn-orange btn-sm">
        + Create Assignment
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You haven't created any assignment yet.
    </div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="card-body p-3">
            <div class="table-responsive">
                <table class="table table-sm align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Assignment</th>
                            <th>Class</th>
                            <th>Course</th>
                            <th>Deadline</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in Model)
                        {
                            <tr>
                                <td>@a.Title</td>

                                <td>
                                    @a.ClassCode
                                    @if (!string.IsNullOrWhiteSpace(a.ClassName))
                                    {
                                        <span>- @a.ClassName</span>
                                    }
                                </td>

                                <td>@a.CourseName</td>

                                <td>@a.DueAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>

                                <td class="text-end">

                                    <a asp-controller="Assignments"
                                       asp-action="Details"
                                       asp-route-id="@a.Id"
                                       class="btn btn-sm btn-outline-primary">
                                        View / Grade
                                    </a>

                                    <a asp-controller="Assignments"
                                       asp-action="Edit"
                                       asp-route-id="@a.Id"
                                       class="btn btn-sm btn-outline-secondary ms-1">
                                        Edit
                                    </a>

                                    <form asp-controller="Assignments"
                                          asp-action="Delete"
                                          asp-route-id="@a.Id"
                                          method="post"
                                          class="d-inline ms-1"
                                          onsubmit="return confirm('Delete this assignment?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            Delete
                                        </button>
                                    </form>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@using SimsWeb.ViewModels
@model AssignmentCreateViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Assignment";
}

<h4 class="mb-3">Create Assignment</h4>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="ClassSectionId" class="form-label"></label>
                <select asp-for="ClassSectionId"
                        class="form-control"
                        asp-items="@(new SelectList(Model.TeacherClassSections, "Id", "Code"))">
                    <option value="">-- Select Class --</option>
                </select>
                <span asp-validation-for="ClassSectionId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label asp-for="DueDate" class="form-label">Due date</label>
                    <input asp-for="DueDate" class="form-control" type="date" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="DueTime" class="form-label">Due time</label>
                    <input asp-for="DueTime" class="form-control" type="time" />
                    <span asp-validation-for="DueTime" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="MaxScore" class="form-label"></label>
                <input asp-for="MaxScore" class="form-control" />
                <span asp-validation-for="MaxScore" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ExerciseFile" class="form-label">Exercise file</label>
                <input asp-for="ExerciseFile" type="file" class="form-control" />
                <span class="form-text small text-muted">
                    (Optional) Upload the assignment document for students.
                </span>
            </div>

            <div class="mb-3">
                <label asp-for="GuideFile" class="form-label">Guide file</label>
                <input asp-for="GuideFile" type="file" class="form-control" />
                <span class="form-text small text-muted">
                    (Optional) Upload solution/guide for reference.
                </span>
            </div>

            <button type="submit" class="btn sims-btn-orange">Create</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@using SimsWeb.ViewModels
@using SimsWeb.Helpers
@model IEnumerable<ScheduleItemViewModel>

@{
    var isStudentOrFaculty = User.IsInRole("Student") || User.IsInRole("Faculty");

    Layout = isStudentOrFaculty
        ? "~/Views/Shared/_Layout.cshtml"
        : "~/Views/Shared/_AdminLayout.cshtml";

    ViewData["Title"] ??= "My Class Schedule";

    var daysOfWeek = new[]
    {
        DayOfWeek.Monday,
        DayOfWeek.Tuesday,
        DayOfWeek.Wednesday,
        DayOfWeek.Thursday,
        DayOfWeek.Friday,
        DayOfWeek.Saturday,
        DayOfWeek.Sunday
    };

    string FormatDay(DayOfWeek d) => d switch
    {
        DayOfWeek.Monday => "Mon",
        DayOfWeek.Tuesday => "Tue",
        DayOfWeek.Wednesday => "Wed",
        DayOfWeek.Thursday => "Thu",
        DayOfWeek.Friday => "Fri",
        DayOfWeek.Saturday => "Sat",
        DayOfWeek.Sunday => "Sun",
        _ => d.ToString()
    };
}

<h4 class="mb-3">@ViewData["Title"]</h4>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No schedules found.
    </div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="card-body p-3">
            <div class="table-responsive">
                <table class="table table-sm align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 150px;">Time</th>
                            @foreach (var d in daysOfWeek)
                            {
                                <th class="text-center">@FormatDay(d)</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in ScheduleTimeHelper.Periods)
                        {
                            <tr>
                                <td>
                                    @p.Label
                                </td>

                                @foreach (var d in daysOfWeek)
                                {
                                    var item = Model.FirstOrDefault(m =>
                                    m.DayOfWeek == d &&
                                    m.StartTime == p.Start);

                                    if (item != null)
                                    {
                                        <td class="text-center">
                                            <div class="fw-semibold">
                                                @item.ClassCode
                                                @if (!string.IsNullOrWhiteSpace(item.ClassName))
                                                {
                                                    <span> - @item.ClassName</span>
                                                }
                                            </div>
                                            <div class="small text-muted">
                                                @item.CourseName
                                            </div>
                                            <div class="small">
                                                Room: @item.Room
                                            </div>
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="text-center text-muted small">-</td>
                                    }
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
    
@using SimsWeb.Models
@model IEnumerable<ClassSchedule>

@{
    ViewData["Title"] = "Class Schedules";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Class Schedules</h4>
    <div>
        <a asp-action="Deleted" class="btn btn-sm btn-outline-secondary me-1">Recycle Bin</a>
        <a asp-action="Create" class="btn btn-sm btn-primary">Create Schedule</a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-3">
        <div class="table-responsive">
            <table class="table table-sm align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Class</th>
                        <th>Course</th>
                        <th>Teacher</th>
                        <th>Day</th>
                        <th>Time</th>
                        <th>Room</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted small py-3">
                                No schedules found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        var i = 1;
                        foreach (var s in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@s.ClassSection?.Code - @s.ClassSection?.Name</td>
                                <td>@s.ClassSection?.Course?.Name</td>
                                <td>@s.ClassSection?.Teacher?.User?.FullName</td>
                                <td>@s.DayOfWeek</td>
                                <td>@s.StartTime.ToString(@"hh\:mm") - @s.EndTime.ToString(@"hh\:mm")</td>
                                <td>@s.Room</td>
                                <td class="text-end">
                                    <a asp-action="Edit"
                                       asp-route-id="@s.Id"
                                       class="btn btn-sm btn-outline-primary me-1">
                                        Edit
                                    </a>
                                    <form asp-action="Delete"
                                          asp-route-id="@s.Id"
                                          method="post"
                                          class="d-inline">
                                        <button type="submit"
                                                class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Soft delete this schedule?');">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@model SimsWeb.ViewModels.ClassEnrollmentViewModel

@{
    bool isStudentOrFaculty = User.IsInRole("Student") || User.IsInRole("Faculty");


    ViewData["Title"] = isStudentOrFaculty?"Class Enrollment":"Manage Class Enrollment";

    Layout = isStudentOrFaculty
        ? "~/Views/Shared/_Layout.cshtml"
        : "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-3">
    <h4 class="mb-1">Manage Enrollment - @Model.ClassCode</h4>
    <div class="text-muted small">
        <div>Class Name: @Model.ClassName</div>
        <div>Course: @Model.CourseName</div>
        <div>Teacher: @Model.TeacherName</div>
    </div>
</div>

@if (TempData["EnrollmentMessage"] != null)
{
    <div class="alert alert-info py-2">
        @TempData["EnrollmentMessage"]
    </div>
}

<div class="row">
    <!-- Enrolled -->
    <div class="col-md-8 mb-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-light">
                <strong>Enrolled Students</strong>
            </div>
            <div class="card-body p-2">
                <div class="table-responsive">
                    <table class="table table-sm align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Email</th>

                                @if (User.IsInRole("Admin"))
                                {
                                    <th class="text-end">Actions</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.EnrolledStudents.Any())
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted small py-2">
                                        No students enrolled in this class.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                var i = 1;
                                foreach (var s in Model.EnrolledStudents)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@s.StudentCode</td>
                                        <td>@s.FullName</td>
                                        <td>@s.Email</td>

                                        @if (User.IsInRole("Admin"))
                                        {
                                            <td class="text-end">
                                            <form asp-controller="Enrollments"
                                                  asp-action="RemoveStudent"
                                                  method="post"
                                                  style="display:inline;"
                                                  onsubmit="return confirm('Remove this student from class?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="classSectionId" value="@Model.ClassSectionId" />
                                                <input type="hidden" name="studentId" value="@s.StudentId" />
                                                <button class="btn btn-sm btn-outline-danger">
                                                    Remove
                                                </button>
                                            </form>
                                        </td>
                                        }
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <!-- Available -->
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-light">
                    <strong>Add Students to Class</strong>
                </div>
                <div class="card-body">
                    @if (!Model.AvailableStudents.Any())
                    {
                        <div class="text-muted small">
                            No available students (all students may already be assigned).
                        </div>
                    }
                    else
                    {
                        <form asp-controller="Enrollments"
                              asp-action="AddStudents"
                              method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="ClassSectionId" />

                            <div class="mb-2 small text-muted">
                                Hold Ctrl (Windows) or Cmd (Mac) to muti-choice student.
                            </div>

                            <select asp-for="SelectedStudentIds"
                                    class="form-select"
                                    multiple
                                    size="10">
                                @foreach (var s in Model.AvailableStudents)
                                {
                                    <option value="@s.StudentId">
                                        @s.StudentCode - @s.FullName (@s.Email)
                                    </option>
                                }
                            </select>

                            <button type="submit" class="btn sims-btn-orange mt-2">
                                Add Selected Students
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-3">
    <a asp-controller="Enrollments" asp-action="Index"
       class="btn btn-sm btn-outline-secondary">
        Back to Class List
    </a>
</div>

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="mb-4">Admin Dashboard</h4>

<div class="row g-3">

    <!-- Manage Users -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h6 class="card-title">Manage Users</h6>
                <p class="small text-muted mb-3">
                    Create, edit, and manage all system accounts and roles.
                </p>
                <a asp-controller="Users" asp-action="Index"
                   class="btn btn-sm sims-btn-orange">
                    Go to User Management
                </a>
            </div>
        </div>
    </div>

    <!-- Manage Students -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h6 class="card-title">Manage Students</h6>
                <p class="small text-muted mb-3">
                    Manage student profiles, enrollment, and related data.
                </p>
                <a asp-controller="Students" asp-action="Index"
                   class="btn btn-sm btn-outline-secondary">
                    Open
                </a>
            </div>
        </div>
    </div>

    <!-- Manage Faculty -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h6 class="card-title">Manage Faculty</h6>
                <p class="small text-muted mb-3">
                    Manage teacher information and assignments.
                </p>
                <a asp-controller="Faculty" asp-action="Index"
                   class="btn btn-sm btn-outline-secondary">
                    Open
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mt-2">
    <!-- Manage Courses -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h6 class="card-title">Manage Courses</h6>
                <p class="small text-muted mb-3">
                    Configure available courses and their details.
                </p>
                <a asp-controller="Courses" asp-action="Index"
                   class="btn btn-sm btn-outline-secondary">
                    Open
                </a>
            </div>
        </div>
    </div>

    <!-- Manage Classes -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h6 class="card-title">Manage Classes</h6>
                <p class="small text-muted mb-3">
                    Manage class groups and schedules.
                </p>
                <a asp-controller="ClassSections" asp-action="Index"
                   class="btn btn-sm btn-outline-secondary">
                    Open
                </a>
            </div>
        </div>
    </div>

    <!-- Assign Students / Teachers -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h6 class="card-title">Class Assignments</h6>
                <p class="small text-muted mb-3">
                    Assign students and teachers to classes.
                </p>
                <a asp-controller="Enrollments" asp-action="Index"
                   class="btn btn-sm btn-outline-secondary me-1">
                    Students
                </a>
                @* <a asp-controller="Admin" asp-action="AssignTeachers"
                   class="btn btn-sm btn-outline-secondary">
                    Teachers
                </a> *@
            </div>
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="mb-1">Home</h3>
<p class="text-muted mb-4">
    Welcome to SIMS. Use the shortcuts below to quickly access your student features.
</p>

<div class="row g-3">

    <!-- Courses -->
    <div class="col-12 col-md-6 col-lg-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body d-flex flex-column">
                <h6 class="card-title mb-2">Courses</h6>
                <p class="small text-muted mb-3 flex-grow-1">
                    View all available courses.
                </p>
                <a asp-controller="Courses"
                   asp-action="Index"
                   class="btn btn-sm btn-outline-secondary mt-auto">
                    Open
                </a>
            </div>
        </div>
    </div>

    <!-- Classes / Enrollments -->
    <div class="col-12 col-md-6 col-lg-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body d-flex flex-column">
                <h6 class="card-title mb-2">Classes</h6>
                <p class="small text-muted mb-3 flex-grow-1">
                    View all classes you are enrolled in.
                </p>
                <a asp-controller="Enrollments"
                   asp-action="Index"
                   class="btn btn-sm btn-outline-secondary mt-auto">
                    View classes
                </a>
            </div>
        </div>
    </div>

    <!-- Schedules -->
    <div class="col-12 col-md-6 col-lg-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body d-flex flex-column">
                <h6 class="card-title mb-2">Schedules</h6>
                <p class="small text-muted mb-3 flex-grow-1">
                    View the schedules of your assigned classes.
                </p>
                <a asp-controller="Schedules"
                   asp-action="Index"
                   class="btn btn-sm btn-outline-secondary mt-auto">
                    View schedule
                </a>
            </div>
        </div>
    </div>

    <!-- Assignments -->
    <div class="col-12 col-md-6 col-lg-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body d-flex flex-column">
                <h6 class="card-title mb-2">Assignments</h6>
                <p class="small text-muted mb-3 flex-grow-1">
                    View assignments for the classes you are enrolled in.
                </p>
                <a asp-controller="StudentAssignment"
                   asp-action="Index"
                   class="btn btn-sm btn-outline-secondary mt-auto">
                    View assignments
                </a>
            </div>
        </div>
    </div>

</div>

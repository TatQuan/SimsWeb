<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin - SIMS</title>

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="sims-body">

    <div class="sims-shell d-flex">

        <!-- SIDEBAR ADMIN -->
        <aside class="sims-sidebar d-flex flex-column mw-100">
            <div class="sims-sidebar-header">
                <div class="sims-logo">SIMS Admin</div>
            </div>

            <div class="sims-sidebar-user">
                <a asp-controller="Profile"
                   asp-action="Index"
                   class="sims-user-name sims-user-link">
                    @User.Identity?.Name
                </a>
                <div class="sims-user-role">
                    Administrator
                </div>
            </div>

            <div class="sims-sidebar-section-title">
                Admin Menu
            </div>

            @{
                var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
            }

            <nav class="nav flex-column sims-sidebar-nav">
                <a asp-controller="Admin" asp-action="Index"
                   class="nav-link sims-sidebar-link @(currentController == "Admin" ? "active" : "")">
                    Dashboard
                </a>

                <a asp-controller="Users" asp-action="Index"
                   class="nav-link sims-sidebar-link @(currentController == "Users" ? "active" : "")">
                    Manage Users
                </a>

                <a asp-controller="Courses" asp-action="Index"
                   class="nav-link sims-sidebar-link @(currentController == "Courses" ? "active" : "")">
                    Manage Courses
                </a>

                <a asp-controller="Students" asp-action="Index"
                   class="nav-link sims-sidebar-link @(currentController == "Students" ? "active" : "")">
                    Manage Students
                </a>

                <a asp-controller="Faculty" asp-action="Index"
                   class="nav-link sims-sidebar-link @(currentController == "Faculty" ? "active" : "")">
                    Manage Faculty
                </a>

                <a asp-controller="ClassSections" asp-action="Index"
                   class="nav-link sims-sidebar-link @(currentController == "ClassSections" ? "active" : "")">
                    Manage Classes
                </a>


                <a asp-controller="Enrollments" asp-action="Index"
                   class="nav-link sims-sidebar-link @(currentController == "Enrollments" ? "active" : "")">
                    Add Students To Class
                </a>

                <a asp-controller="ClassSchedules"
                   asp-action="Index"
                   class="nav-link sims-sidebar-link @(currentController == "ClassSchedules" ? "active" : "")">
                    Class Schedules
                </a>

            </nav>

            <div class="sims-sidebar-footer mt-auto">
                <a asp-controller="Home" asp-action="Index"
                    class="btn btn-sm w-100 sims-btn-outline-orange mb-2">
                    Back to Site
                </a>

                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-sm w-100 sims-btn-orange">
                        Logout
                    </button>
                </form>
            </div>

        </aside>

        <!-- MAIN ADMIN AREA -->
        <div class="sims-main d-flex flex-column flex-grow-1">

            <!-- TOPBAR -->
            <header class="sims-topbar d-flex align-items-center justify-content-between">
                <div class="sims-topbar-left">
                    <span class="sims-topbar-title">@ViewData["Title"]</span>
                </div>

                <span class="sims-breadcrumb small text-muted">
                    Admin / @ViewData["Title"]
                </span>
            </header>

            <!-- CONTENT -->
            <main class="sims-content flex-grow-1">
                @RenderBody()
            </main>

            <!-- FOOTER -->
            <footer class="sims-footer text-center small text-muted">
                SIMS Admin © @DateTime.Now.Year
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
